@model CopiesViewModel
@{
    ViewData["Title"] = Model.Title;
    ViewData["Author"] = Model.Author;
}

<h1>@ViewData["Title"] - by @ViewData["Author"]</h1>


<div style="margin-top: 20px">
    <table class="table">
        <tr>
            <th>
                ID
            </th>
            <th>
                Status
            </th>
        </tr>
        @foreach (var copy in Model.Copies)
        {
            <tr>
                <td>@copy.CopyId</td>
                <td>@Model.GetStatus(copy)</td>
            </tr>
        }
    </table>
</div>